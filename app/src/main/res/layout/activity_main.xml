<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/layout">
    <LinearLayout
        android:id="@+id/top"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">
        <TextView android:id="@+id/text"
            android:text="@string/default_text"
            android:textSize="64sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center">
        </TextView>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="108dp"
            android:layout_height="108dp">
            <com.example.jcs.heartbeat.HeartbeatView
                android:id="@+id/image"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </com.example.jcs.heartbeat.HeartbeatView>
        </RelativeLayout>

        <SurfaceView android:id="@+id/preview"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </SurfaceView>
    </LinearLayout>

    <!--This will be opened during RHR measurement-->

    <LinearLayout
        android:id="@+id/ll_measuringRHR"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#C0C0C0">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="48dp"
            android:text="You are measuring RHR"
            android:textSize="22sp"/>
    </LinearLayout>

    <!--List Starts here-->

    <LinearLayout
        android:id="@+id/ll_calculatingTHR"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#C0C0C0"
        android:visibility="gone">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maximum Heart Rate:"
            android:textColor="@color/colorSecondary"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="MHR"
            android:id="@+id/tv_MHR"
            android:textColor="@color/colorSecondary"
            android:textSize="18sp"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heart Rate Reserve:"
                android:textColor="@color/colorSecondary"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="HRR"
                android:id="@+id/tv_HRR"
                android:textColor="@color/colorSecondary"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:text="Warm Up/Cool Down"
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorSecondary"
            android:textSize="18sp"
            android:padding="4dp"
            android:layout_margin="8dp"/>
        <TextView
            android:text="Your'e burning fat!"
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorSecondary"
            android:textSize="18sp"
            android:padding="4dp"
            android:layout_margin="8dp"/>
        <TextView
            android:text="Your'e getting fitter!"
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorSecondary"
            android:textSize="18sp"
            android:padding="4dp"
            android:layout_margin="8dp"/>
        <TextView
            android:text="Extreme Training"
            android:id="@+id/card4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorSecondary"
            android:textSize="18sp"
            android:padding="4dp"
            android:layout_margin="8dp"/>
        <TextView
            android:text="You need to cool down!"
            android:id="@+id/card5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorSecondary"
            android:textSize="18sp"
            android:padding="4dp"
            android:layout_margin="8dp"/>


    </LinearLayout>

</LinearLayout>
